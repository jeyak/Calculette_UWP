<Page x:ConnectionId='1'
    x:Class="Calculette.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculette"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
                        
                          >

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <RelativePanel>
            <StackPanel x:ConnectionId='2' RelativePanel.AlignTopWithPanel="True"
                        RelativePanel.AlignLeftWithPanel="True"
                        RelativePanel.AlignRightWithPanel="True"
                        Background="#CC133445"
                        Padding="10"
                        Name="stckDisplay">

                <Viewbox Height="40"
                         HorizontalAlignment="Right">
                    <TextBlock x:ConnectionId='24' Text="" 
                           TextAlignment="Right"
                           Foreground="White"
                           Name="lblOperationHistory"/>
                </Viewbox>
                <Viewbox Height="105"
                         HorizontalAlignment="Right">
                    <TextBlock x:ConnectionId='23' Text="0"
                               TextAlignment="Right"
                               FontWeight="ExtraLight"
                               Foreground="White"
                               TextWrapping="Wrap"
                               Name="lblNumberPrinter"/>
                </Viewbox>
            </StackPanel>
            <Grid RelativePanel.Below="stckDisplay"
                  RelativePanel.AlignBottomWithPanel="True"
                  RelativePanel.AlignLeftWithPanel="True"
                  RelativePanel.AlignRightWithPanel="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Button x:ConnectionId='3' Content="CE" 
                        Grid.Column="0"
                        Grid.Row="0"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btnCE"                    />
                <Button x:ConnectionId='4' Content="C" 
                        Grid.Column="1"
                        Grid.Row="0"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btnC"                   />
                <Button x:ConnectionId='5' Content="Del" 
                        Grid.Column="2"
                        Grid.Row="0"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btnErase"                       />
                <Button x:ConnectionId='6' Content="÷" 
                        Grid.Column="3"
                        Grid.Row="0"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btnDivision"                          />
                
                <Button x:ConnectionId='7' Content="7" 
                        Grid.Column="0"
                        Grid.Row="1"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btn7"                   />
                <Button x:ConnectionId='8' Content="8" 
                        Grid.Column="1"
                        Grid.Row="1"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btn8"                   />
                <Button x:ConnectionId='9' Content="9" 
                        Grid.Column="2"
                        Grid.Row="1"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btn9"                   />
                <Button x:ConnectionId='10' Content="×" 
                        Grid.Column="3"
                        Grid.Row="1"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btnMultiplication"                                />
                <Button x:ConnectionId='11' Content="4" 
                        Grid.Column="0"
                        Grid.Row="2"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btn4"                   />
                <Button x:ConnectionId='12' Content="5" 
                        Grid.Column="1"
                        Grid.Row="2"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btn5"                   />
                <Button x:ConnectionId='13' Content="6" 
                        Grid.Column="2"
                        Grid.Row="2"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btn6"                   />
                <Button x:ConnectionId='14' Content="+" 
                        Grid.Column="3"
                        Grid.Row="2"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btnAddition"                          />
                <Button x:ConnectionId='15' Content="1" 
                        Grid.Column="0"
                        Grid.Row="3"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btn1"                   />
                <Button x:ConnectionId='16' Content="2" 
                        Grid.Column="1"
                        Grid.Row="3"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btn2"                   />
                <Button x:ConnectionId='17' Content="3" 
                        Grid.Column="2"
                        Grid.Row="3"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btn3"                   />
                <Button x:ConnectionId='18' Content="-" 
                        Grid.Column="3"
                        Grid.Row="3"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btnSoustration"                             />
                <Button x:ConnectionId='19' Content="±" 
                        Grid.Column="0"
                        Grid.Row="4"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btnNegate"                        />
                <Button x:ConnectionId='20' Content="0" 
                        Grid.Column="1"
                        Grid.Row="4"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btn0"                   />
                <Button x:ConnectionId='21' Content="," 
                        Grid.Column="2"
                        Grid.Row="4"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btnComma"                       />
                <Button x:ConnectionId='22' Content="=" 
                        Grid.Column="3"
                        Grid.Row="4"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btnEqual"                       />
            </Grid>
        </RelativePanel>
    </Grid>
</Page>

