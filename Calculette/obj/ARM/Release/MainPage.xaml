<Page x:ConnectionId='1'
    x:Class="Calculette.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculette"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
                        
                          >

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <RelativePanel>
            <RelativePanel x:ConnectionId='2' Name="rltvAppLabel"
                  RelativePanel.AlignTopWithPanel="True"
                  RelativePanel.AlignLeftWithPanel="True"
                  RelativePanel.AlignRightWithPanel="True"
                  Height="50"
                  Background="#CC133445">
                <StackPanel Orientation="Horizontal"
                            RelativePanel.AlignHorizontalCenterWithPanel="True"
                            RelativePanel.AlignVerticalCenterWithPanel="True">
                    <Image Source="Assets\calculator128.png"
                           MaxHeight="30"
                           Margin="5"/>
                    <TextBlock Text="Calculette"
                               FontSize="30"
                               FontWeight="Light"
                               TextAlignment="Center"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </RelativePanel>
            <StackPanel x:ConnectionId='3' RelativePanel.Below="rltvAppLabel"
                        RelativePanel.AlignLeftWithPanel="True"
                        RelativePanel.AlignRightWithPanel="True"
                        Background="#CC133445"
                        Padding="10"
                        Name="stckDisplay">

                <Viewbox Height="40"
                         HorizontalAlignment="Right">
                    <TextBlock x:ConnectionId='25' Text="" 
                           TextAlignment="Right"
                           Foreground="White"
                           Name="lblOperationHistory"/>
                </Viewbox>
                <Viewbox Height="120"
                         HorizontalAlignment="Right">
                    <TextBlock x:ConnectionId='24' Text="0"
                               TextAlignment="Right"
                               FontWeight="ExtraLight"
                               Foreground="White"
                               TextWrapping="Wrap"
                               Name="lblNumberPrinter"/>
                </Viewbox>
            </StackPanel>
            <Grid RelativePanel.Below="stckDisplay"
                  RelativePanel.AlignBottomWithPanel="True"
                  RelativePanel.AlignLeftWithPanel="True"
                  RelativePanel.AlignRightWithPanel="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Button x:ConnectionId='4' Grid.Column="0"
                        Grid.Row="0"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btnCE"                     Background="#B2532E3B">
                    <Viewbox MaxHeight="65">
                        <TextBlock Text="CE" />
                    </Viewbox>
                </Button>
                <Button x:ConnectionId='5' Grid.Column="1"
                        Grid.Row="0"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btnC"                    Background="#B2532E3B">
                    <Viewbox MaxHeight="65">
                        <TextBlock Text="C" />
                    </Viewbox>
                </Button>
                <Button x:ConnectionId='6' Grid.Column="2"
                        Grid.Row="0"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btnErase"                        Background="#B2532E3B">
                    <Viewbox MaxHeight="65">
                        <Image Source="Assets\ClearSymbol-100.png" />
                    </Viewbox>
                </Button>
                <Button x:ConnectionId='7' Grid.Column="3"
                        Grid.Row="0"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btnDivision"                           Background="#B2225268">
                    <Viewbox MaxHeight="65">
                        <TextBlock Text="÷" />
                    </Viewbox>
                </Button>
                
                <Button x:ConnectionId='8' Grid.Column="0"
                        Grid.Row="1"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btn7"                   >
                    <Viewbox MaxHeight="65">
                        <TextBlock Text="7" />
                    </Viewbox>
                </Button>
                <Button x:ConnectionId='9' Grid.Column="1"
                        Grid.Row="1"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btn8"                   >
                    <Viewbox MaxHeight="65">
                        <TextBlock Text="8" />
                    </Viewbox>
                </Button>
                <Button x:ConnectionId='10' Grid.Column="2"
                        Grid.Row="1"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btn9"                   >
                    <Viewbox MaxHeight="65">
                        <TextBlock Text="9" />
                    </Viewbox>
                </Button>
                <Button x:ConnectionId='11' Grid.Column="3"
                        Grid.Row="1"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btnMultiplication"                                 Background="#B2225268">
                    <Viewbox MaxHeight="65">
                        <TextBlock Text="×" />
                    </Viewbox>
                </Button>
                <Button x:ConnectionId='12' Grid.Column="0"
                        Grid.Row="2"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btn4"                   >
                    <Viewbox MaxHeight="65">
                        <TextBlock Text="4" />
                    </Viewbox>
                </Button>
                <Button x:ConnectionId='13' Grid.Column="1"
                        Grid.Row="2"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btn5"                   >
                    <Viewbox MaxHeight="65">
                        <TextBlock Text="5" />
                    </Viewbox>
                </Button>
                <Button x:ConnectionId='14' Grid.Column="2"
                        Grid.Row="2"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btn6"                   >
                    <Viewbox MaxHeight="65">
                        <TextBlock Text="6" />
                    </Viewbox>
                </Button>
                <Button x:ConnectionId='15' Grid.Column="3"
                        Grid.Row="2"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btnAddition"                           Background="#B2225268">
                    <Viewbox MaxHeight="65">
                        <TextBlock Text="+" />
                    </Viewbox>
                </Button>
                <Button x:ConnectionId='16' Grid.Column="0"
                        Grid.Row="3"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btn1"                   >
                    <Viewbox MaxHeight="65">
                        <TextBlock Text="1" />
                    </Viewbox>
                </Button>
                <Button x:ConnectionId='17' Grid.Column="1"
                        Grid.Row="3"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btn2"                   >
                    <Viewbox MaxHeight="65">
                        <TextBlock Text="2" />
                    </Viewbox>
                </Button>
                <Button x:ConnectionId='18' Grid.Column="2"
                        Grid.Row="3"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btn3"                   >
                    <Viewbox MaxHeight="65">
                        <TextBlock Text="3" />
                    </Viewbox>
                </Button>
                <Button x:ConnectionId='19' Grid.Column="3"
                        Grid.Row="3"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btnSoustration"                              Background="#B2225268">
                    <Viewbox MaxHeight="65">
                        <TextBlock Text="-" />
                    </Viewbox>
                </Button>
                <Button x:ConnectionId='20' Grid.Column="0"
                        Grid.Row="4"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btnNegate"                        >
                    <Viewbox MaxHeight="65">
                        <TextBlock Text="±" />
                    </Viewbox>
                </Button>
                <Button x:ConnectionId='21' Grid.Column="1"
                        Grid.Row="4"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btn0"                   >
                    <Viewbox MaxHeight="65">
                        <TextBlock Text="0" />
                    </Viewbox>
                </Button>
                <Button x:ConnectionId='22' Grid.Column="2"
                        Grid.Row="4"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btnComma"                       >
                    <Viewbox MaxHeight="65">
                        <TextBlock Text="," />
                    </Viewbox>
                </Button>
                <Button x:ConnectionId='23' Grid.Column="3"
                        Grid.Row="4"
                        FontSize="30"
                        FontWeight="SemiLight"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Name="btnEqual"                        Background="#B2124216">
                    <Viewbox MaxHeight="65">
                        <TextBlock Text="=" />
                    </Viewbox>
                </Button>
            </Grid>
        </RelativePanel>
    </Grid>
</Page>

